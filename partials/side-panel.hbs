<header class="panel-cover panel-cover--collapsed" {{#if @blog.noCover}}style="background-image: url({{@blog.cover}})"{{/if}}>
  <div class="panel-main">
    <div class="panel-main__inner panel-inverted">
      <div class="panel-main__content">
        {{#if @blog.logo}}
          <!-- a href="{{@blog.url}}"><img src="{{@blog.logo}}" width="80" alt="{{@blog.title}} logo" class="panel-cover__logo logo" /></a -->
        {{/if}}

        <h1 class="panel-cover__title panel-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
        <p class="panel-subtitle">Esse quam videri.</p>
        <hr class="panel-cover__divider" />

        <p class="panel-cover__description">
          <!-- A personal soapbox and maker blog with musings on anything I feel like trolling or otherwise ranting about.-->
          A collective experience in modern waste management. Compiled and recycled by Sanjay Kannan.
        </p>
        
        <hr class="panel-cover__divider divider-two" />
        <p class="panel-subtitle">
          <a href="{{@blog.url}}/self/">By</a> Sanjay Kannan
          <br>So <a href="{{@blog.url}}/about/">what</a> is Skalon?
        </p>

        <hr class="panel-cover__divider divider-two" />
        {{> social}}

        <div class="navigation-wrapper" style="display: none;">
          <nav class="cover-navigation cover-navigation--primary">
            <ul class="navigation">
              <li class="navigation__item"><a href="/#blog" title="link to {{@blog.title}} blog" class="blog-button">Blog</a></li>
            </ul>
          </nav>

          {{> social}}
        </div>
      </div>
    </div>
  </div>
</header>
